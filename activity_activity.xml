<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.myapplication.activity"
    >

    <CheckBox
        android:text="Name 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_marginTop="45dp"
        android:id="@+id/checkBoxn1"
        android:textSize="20dp"/>

    <CheckBox
        android:text="Name 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxn1"
        android:layout_alignLeft="@+id/checkBoxn1"
        android:layout_alignStart="@+id/checkBoxn1"
        android:layout_marginTop="25dp"
        android:id="@+id/checkBoxn2"
        android:textSize="20dp"/>

    <CheckBox
        android:text="Name 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxn2"
        android:layout_alignLeft="@+id/checkBoxn2"
        android:layout_alignStart="@+id/checkBoxn2"
        android:layout_marginTop="26dp"
        android:id="@+id/checkBoxn3"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="0"
        android:layout_alignTop="@+id/checkBoxn2"
        android:layout_alignLeft="@+id/editText13"
        android:layout_alignStart="@+id/editText13"
        android:id="@+id/editText14"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="0"
        android:layout_alignTop="@+id/checkBoxn3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText15"
        android:layout_alignLeft="@+id/editText14"
        android:layout_alignStart="@+id/editText14"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="0"
        android:id="@+id/editText13"
        android:layout_alignTop="@+id/checkBoxn1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mePaid"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/enter_am"
        android:layout_alignStart="@+id/enter_am"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_alignTop="@+id/mePaid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter your Activity here"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:id="@+id/act_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:text="Amount "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView20"
        android:layout_above="@+id/checkBoxn1"
        android:layout_alignLeft="@+id/save"
        android:layout_alignStart="@+id/save" />

    <TextView
        android:text="Enter Amount paid by you :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_am"
        android:textSize="20dp"
        android:layout_above="@+id/mePaid"
        android:layout_alignLeft="@+id/checkBoxn3"
        android:layout_alignStart="@+id/checkBoxn3"
        android:layout_marginBottom="33dp" />

    <TextView
        android:text="Enter Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/act_name"
        android:layout_alignBottom="@+id/act_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/textView19"

        android:layout_below="@+id/act_name"
        android:layout_alignRight="@+id/checkBoxn1"
        android:layout_alignEnd="@+id/checkBoxn1"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:textSize="20dp"/>

</RelativeLayout>
